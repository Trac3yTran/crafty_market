
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


<div id="page" class="container">
 <h2>Sign Up</h2>
    <div class="row">
       <div class="col-md-6 col-md-offset-3 text-center">
            <div class="form-group text-center">
            <%= f.label :name %>
            <%= f.text_field :name, :autofocus => true, class: "form-control text-center" %>
            </div>

              <div class="form-group text-center">
                <%= f.label :email %>
                <%= f.email_field :email, :autofocus => true, class: "form-control text-center" %>
              </div>

              <div class="form-group text-center">
                <%= f.label :password %>
                <%= f.password_field :password, class: "form-control text-center" %>
              </div>

              <div class="form-group text-center">
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, class: "form-control text-center" %>
              </div>

              <div class="form-group text-center">
                <%= f.submit "Sign up", class: "btn btn-primary text-center" %>
              </div>
            <% end %>
               <%= render "devise/shared/links" %>
      </div>
    </div>
 
</div>



    